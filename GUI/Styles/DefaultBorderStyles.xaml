<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PanasonicSync.GUI.Styles">
    <Style x:Key="DefaultThickBorderStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <Style x:Key="DefaultSmallBorderStyle" TargetType="Border" BasedOn="{StaticResource DefaultThickBorderStyle}">
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
</ResourceDictionary>